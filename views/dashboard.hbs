  <a class="navbar-brand" href="#">My DashBoard</a>
  <a href="/videos/add"><button type="button" class="btn btn-primary">ADD NEW</button></a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent-4">
    <ul class="navbar-nav ml-auto">

      <li class="nav-item">
        <a class="nav-link " aria-haspopup="true" aria-expanded="false" href="/auth/logout">
          <i class="fas fa-user"></i>Log out</a>

      </li>
    </ul>
  </div>
