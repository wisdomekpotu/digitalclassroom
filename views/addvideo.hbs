<!doctype html>
<html lang="en">

<head>
  <title>VIDEOS STUDIO</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
<link href="https://unpkg.com/tailwindcss@2.2.4/dist/tailwind.min.css" rel="stylesheet">

</head>

<body>



  <form action="/videos" method="POST" class="border border-light p-5" enctype="multipart/form-data">

    <p class="h4 mb-4 text-center">Upload</p>

    <label for="title">Title</label>
    <input type="text" id="title" name='title' class="form-control mb-4" placeholder="Enter Your Text">

    <label for="select">Video Status</label>
    <select class="browser-default custom-select mb-4" id="status" name="status">

      <option value="private">private</option>
      <option value="public" selected>public</option>
    </select>



    <label for="textInput">Video</label>
    <div class="input-group mb-4">
      <div class="input-group-prepend">
        <span class="input-group-text">Upload</span>
      </div>
      <div class="custom-file">
        <input type="file" name="video" accept='video/*' class="custom-file-input" id="fileInput"
          aria-describedby="fileInput">
        <label class="custom-file-label" for="video">Upload Video</label>
      </div>
    </div>




    <label for="textarea">Video Description</label>
    <textarea id="textarea" name="description" class="form-control mb-4" placeholder="Textarea"></textarea>








    <label for="textInput">Thumbnail</label>
    <div class="input-group mb-4">
      <div class="input-group-prepend">
        <span class="input-group-text">Upload</span>
      </div>
      <div class="custom-file">
        <input type="file" name="thumbnail" accept='image/*' class="custom-file-input" id="thumbnail"
          aria-describedby="fileInput">
        <label class="custom-file-label" for="image">Upload Thumbnail</label>
      </div>
    </div>

    <button class="btn btn-info btn-block my-4" type="submit" value="upload"><i class="fab fa-airbnb"></i>
      Upload</button>


    </div>
  </form> 


  <script>
    $('.file-upload').file_upload();
  </script>

  <script src="/public/JS/javascript.js"></script>
  <!-- JQuery -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>
</body>

</html>